{
  "name": "node-astronomy",
  "version": "0.1.0",
  "description": "An NPM package that can give you astronomy information about various cosmic and natural objects in our solar system.",
  "keywords": [
    "astronomy",
    "sun",
    "moon",
    "time",
    "planets",
    "earth"
  ],
  "homepage": "https://github.com/Bugs5382/node-astronomy#readme",
  "bugs": {
    "url": "https://github.com/Bugs5382/node-astronomy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bugs5382/node-astronomy.git"
  },
  "license": "MIT",
  "author": "Shane Froebel",
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/esm/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:local": "tsup && npm run pack",
    "lint": "eslint | snazzy",
    "lint:fix": "eslint --fix | snazzy",
    "lint:npm": "npmPkgJsonLint .",
    "lint:package": "npx sort-package-json",
    "pack": "npm pack",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:verbose": "vitest run --reporter verbose",
    "test:watch": "vitest watch",
    "typedoc": "typedoc",
    "typedoc:watch": "typedoc -watch",
    "update": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "@observerly/astrometry": "^0.60.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@shipgirl/typedoc-plugin-versions": "^0.3.2",
    "@the-rabbit-hole/eslint-config": "^0.1.0",
    "@types/node": "^24.3.1",
    "@types/sinon": "^17.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "npm-check-updates": "^18.0.3",
    "npm-package-json-lint": "^9.0.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "sinon": "^21.0.0",
    "snazzy": "^9.0.0",
    "sort-package-json": "^3.4.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.19.1"
  }
}
